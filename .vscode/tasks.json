{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"args": ["--example", "balls"],
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "run"
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "build"
		},
		{
			"type": "shell",
			"command": "cd sample && wasm-pack build --target web",
			"group": "build",
			"label": "wasm-pack: build",
			"problemMatcher": []
		}
	]
}